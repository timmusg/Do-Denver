<div class="layout">
  <div class="container-fluid">
    <div class="location">
      <div class="row">
        {{#each places}}
          <div class="col-sm-6 col-md-4 myPlace">
            <div class="thumbnail placeBeen">
              <img class="personalImage" src="{{this.image_url}}" alt="...">
              <div class="caption">
                <h3>{{this.name}}</h3>
                <p>{{this.description}}</p>
                <a class="btn btn-default" href="/clients/havedone/{{this.id}}/delete" role="button">Delete</a>
                <a class="btn btn-default" href="../clients/havedone/{{this.id}} " role="button">View Place Details</a>
                <button class="btn btn-default edit" type="button">
                  Add Comment
                </button>
                <div class="row">
                  <div class="col-md-12 col-xs-12">
                    <form action="/clients/havedone" method="post">
                      <div class="hidden_form">
                        <div class="form-group">
                          <input class=".id" type="hidden" name="place_id" value="{{this.id}}">
                        </div>
                        <div class="form-group">
                          <input type="hidden" name="client_id" value="{{../id}}">
                        </div>
                        <div class="form-group">
                          <label for="description">Description</label>
                          <textarea name="comment_body" rows=5 placeholder="Add Comment Body"></textarea>
                        </div>
                        <div class="form-group">
                          <button class="btn btn-default edit" type="submit">Submit</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
        {{/each}}
      </div>
    </div>
