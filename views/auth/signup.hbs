<div class="container-fluid padding-left">
  <h1>Create an account</h1>
  <div class="row">
    <div class="col-md-12 col-xs-12">
      <form action="/signup" method="post">
        <div class="form-group">
          <label for="first_name">First Name
              <input class="form-group" type="text" name="first_name" id="first_name" placeholder="First Name">
          </label>
        </div>
        <div class="form-group">
          <label for="last_name">Last Name
          <input class="form-group" type="text" name="last_name" id="last_name" placeholder="Last Name">
          </label>
        </div>
        <div class="form-group">
          <label for="username">Username
          <input class="form-group" type="text" name="username" id="username" placeholder="Username">
          </label>
        </div>
        <div class="form-group">
          <label for="password">Password
          <input class="form-group" type="password" name="password" id="password" placeholder="Password">
          </label>
        </div>
        <input class="form-group btn btn-default" type="submit" value="Sign up">
      </form>
      {{#if error}}
        {{error}}
      {{/if}}
    </div>
  </div>
</div>
